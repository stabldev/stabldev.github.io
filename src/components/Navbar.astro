---
import { Icon } from "astro-icon/components";
---

<div
  class="flex items-center justify-between gap-3 p-3 bg-base-100 border max-w-2xl mx-auto mt-5 text-foreground/75"
>
  <button class="flex items-center gap-2">
    <Icon name="search" class="size-5" />
    <span class="font-medium text-sm">Quick Search...</span>
  </button>
  <div class="flex items-center gap-3">
    <a href="https://github.com/stabldev" target="_blank" rel="noreferrer">
      <Icon name="github" class="size-4.5" />
    </a>
    <a href="https://x.com/stabldev" target="_blank" rel="noreferrer">
      <Icon name="x" class="size-4" />
    </a>
    <a href="/rss.xml" target="_blank" rel="noreferrer">
      <Icon name="rss" class="size-3.5 shrink-0" />
    </a>
  </div>
</div>
