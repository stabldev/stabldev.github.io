---
import { Icon } from "astro-icon/components";
import { type CollectionEntry } from "astro:content";

interface Props extends CollectionEntry<"__posts__"> {}
const { id, data } = Astro.props;
---

<div class="bg-base-100 mx-auto mt-20 max-w-5xl gap-10 border">
  <div
    class="mx-auto grid max-w-4xl divide-y px-4 lg:grid-cols-5 lg:divide-x lg:divide-y-0"
  >
    <div
      class="mx-auto flex flex-1 flex-col gap-5 py-10 pr-0 pl-0 lg:col-span-3 lg:pr-10"
    >
      <h1 class="font-serif text-3xl font-black md:text-4xl">
        {data.title}
      </h1>
      <p class="text-base-content/75">
        {data.description}
      </p>
      <a
        href={`/${id}`}
        class="mt-auto inline-flex w-max items-center gap-2 font-medium hover:underline"
      >
        Countinue reading
        <Icon name="arrow-right" />
      </a>
    </div>
    <div
      class="flex flex-col justify-center gap-2 py-10 pr-0 pl-0 lg:col-span-2 lg:pl-10"
    >
      <h3 class="font-serif text-2xl font-bold">Newsletter</h3>
      <h4 class="text-base-content/75 text-sm">
        I run a newsletter about design, coding, ai and open source.
      </h4>
      <div class="flex h-10 min-w-0 items-center">
        <input
          type="email"
          placeholder="your@email.com"
          class="bg-base-content/10 outline-base-content/75 h-full w-full max-w-50 border border-r-0 px-4 text-sm font-medium"
        />
        <button
          class="bg-base-content/15 h-full border px-3 text-sm font-medium"
          >Subscribe</button
        >
      </div>
    </div>
  </div>
</div>
