---
import { siteConfig } from "@config/site";
import { Icon } from "astro-icon/components";

interface Props {
  filePath?: string;
}

const { filePath } = Astro.props;
---

<div class="bg-base-100 flex flex-col gap-2 border p-5 md:mx-10">
  <h4 class="font-serif text-xl font-black">Found a mistake?</h4>
  <p class="text-base-content/75">
    Every post is a Markdown file so contributing is simple as following the
    link below and pressing the pencil icon inside GitHub to edit it.
  </p>
  <a
    href={`https://github.com/${siteConfig.repo}/blob/main/${filePath}`}
    class="mt-5 inline-flex w-max items-center gap-2 font-medium hover:underline"
    target="_blank"
    rel="noreferrer"
  >
    Edit on GitHub
    <Icon name="arrow-right" />
  </a>
</div>
