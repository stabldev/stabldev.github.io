---
import { siteConfig } from "@config/site";
import { Icon } from "astro-icon/components";
---

<header
  class="bg-base-200 text-base-content/75 mx-auto flex max-w-2xl items-center justify-between gap-3 border pr-3 md:mt-5"
>
  <div class="flex items-center gap-3">
    <img src="/favicon.ico" alt="icon" class="size-11 border-r" />
    <button class="flex items-center gap-2">
      <Icon name="search" class="size-5" />
      <span class="text-sm font-medium">Quick Search...</span>
    </button>
  </div>
  <div class="flex items-center gap-3">
    {
      siteConfig.links.map((link) => (
        <a href={link.href} target="_blank" rel="noreferrer">
          <Icon name={link.iconName} class={link.iconClass} />
        </a>
      ))
    }
  </div>
</header>
